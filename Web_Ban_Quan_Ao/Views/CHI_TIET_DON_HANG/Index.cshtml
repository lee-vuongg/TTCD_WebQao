@model IEnumerable<Web_Ban_Quan_Ao.Models.CHI_TIET_DON_HANG>

@{
    ViewBag.Title = "Danh Sách Chi Tiết Đơn Hàng";
}

<h2 class="mb-4 text-center">Danh Sách Chi Tiết Đơn Hàng</h2>

<!-- Nút tạo chi tiết đơn hàng mới -->
<p>
    @Html.ActionLink("Tạo Mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

<!-- Bảng hiển thị danh sách chi tiết đơn hàng -->
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.So_luong)</th>
            <th>@Html.DisplayNameFor(model => model.Gia)</th>
            <th>@Html.DisplayNameFor(model => model.DON_HANG.Trang_thai)</th>
            <th>@Html.DisplayNameFor(model => model.SAN_PHAM.TenSP)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.So_luong)</td>
                <td>@Html.DisplayFor(modelItem => item.Gia)</td>
                <td>@Html.DisplayFor(modelItem => item.DON_HANG.Trang_thai)</td>
                <td>@Html.DisplayFor(modelItem => item.SAN_PHAM.TenSP)</td>
                <td class="text-center">
                    <!-- Các hành động với nút nhóm -->
                    <div class="btn-group" role="group" aria-label="Actions">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaCTDH }, new { @class = "btn btn-warning btn-sm mx-1" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaCTDH }, new { @class = "btn btn-info btn-sm mx-1" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaCTDH }, new { @class = "btn btn-danger btn-sm mx-1", onclick = "return confirm('Bạn có chắc chắn muốn xóa chi tiết đơn hàng này?')" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
