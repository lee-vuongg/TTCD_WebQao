@model IEnumerable<Web_Ban_Quan_Ao.Models.QUAN_TRI>

@{
    ViewBag.Title = "Quản Trị Người Dùng";
}

<h2 class="mb-4 text-center">Quản Trị Người Dùng</h2>

<!-- Nút tạo tài khoản mới -->
<p>
    @Html.ActionLink("Tạo Tài Khoản Mới", "Create", new { @class = "btn btn-primary mb-3" })
</p>

<!-- Bảng hiển thị thông tin người dùng -->
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Mat_khau)</th>
            <th>@Html.DisplayNameFor(model => model.So_dien_thoai)</th>
            <th>@Html.DisplayNameFor(model => model.Trang_thai)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Mat_khau)</td>
                <td>@Html.DisplayFor(modelItem => item.So_dien_thoai)</td>
                <td>@Html.DisplayFor(modelItem => item.Trang_thai)</td>
                <td class="text-center">
                    <!-- Gom nhóm các hành động -->
                    <div class="btn-group" role="group" aria-label="Actions">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.Tai_khoan, @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Tai_khoan, @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.Tai_khoan, @class = "btn btn-danger btn-sm" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
