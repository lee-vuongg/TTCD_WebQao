@{
    ViewBag.Title = "Trang Chủ - ShopLite";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Thanh tìm kiếm */
        .search-bar {
            background-color: #ff5722;
            color: #fff;
            padding: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

            .search-bar .logo h1 {
                margin: 0;
                font-size: 24px;
                color: #fff;
                font-weight: bold;
            }

            .search-bar .search-input {
                flex-grow: 1;
                margin: 0 20px;
                display: flex;
            }

                .search-bar .search-input input {
                    flex-grow: 1;
                    padding: 8px;
                    border: none;
                    border-radius: 4px 0 0 4px;
                }

                .search-bar .search-input button {
                    background-color: #fff;
                    color: #ff5722;
                    border: none;
                    padding: 8px 20px;
                    border-radius: 0 4px 4px 0;
                    cursor: pointer;
                }

            .search-bar .cart-icon {
                font-size: 16px;
            }

                .search-bar .cart-icon a {
                    color: #fff;
                    text-decoration: none;
                }

        /* Danh mục sản phẩm */
        .categories {
            background-color: #f7f7f7;
            padding: 20px 0;
            text-align: center;
        }

            .categories h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .category-list {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .category-item {
            width: 120px;
            text-align: center;
        }

            .category-item img {
                border-radius: 50%;
                width: 100px;
                height: 100px;
                object-fit: cover;
            }

            .category-item p {
                margin-top: 10px;
                color: #555;
            }

        /* Sản phẩm nổi bật */
        .featured-products {
            padding: 20px 0;
            text-align: center;
        }

            .featured-products h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .product-list {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .product-item {
            width: 200px;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 10px;
            background-color: #fff;
            text-align: center;
        }

            .product-item img {
                width: 100%;
                border-radius: 8px;
            }

            .product-item h3 {
                font-size: 16px;
                margin: 10px 0;
                color: #333;
            }

            .product-item .price {
                color: #e53935;
                font-size: 18px;
                font-weight: bold;
            }

            .product-item .btn {
                margin-top: 10px;
                background-color: #ff5722;
                color: #fff;
                border: none;
                padding: 8px 10px;
                border-radius: 4px;
                text-decoration: none;
                cursor: pointer;
            }

                .product-item .btn:hover {
                    background-color: #e64a19;
                }
    </style>
</head>
<body>
    <!-- Thanh tìm kiếm -->
    <div class="search-bar">
        <div class="logo">
            <h1>ShopLite</h1>
        </div>
        <div class="search-input">
            <input type="text" placeholder="Tìm kiếm sản phẩm, danh mục hay thương hiệu...">
            <button>Tìm kiếm</button>
        </div>
        <div class="cart-icon">
            <a href="/Cart"><i class="fa fa-shopping-cart"></i> Giỏ hàng</a>
        </div>
    </div>

    <!-- Danh mục sản phẩm -->
    <div class="categories">
        <h2>Danh mục</h2>
        <div class="category-list">
            @for (int i = 1; i <= 8; i++)
            {
                <div class="category-item">
                    <img src="https://via.placeholder.com/100" alt="Danh mục @i">
                    <p>Danh mục @i</p>
                </div>
            }
        </div>
    </div>

    <!-- Sản phẩm nổi bật -->
    <div class="featured-products">
        <h2>Sản phẩm nổi bật</h2>
        <div class="product-list">
            @for (int i = 1; i <= 8; i++)
            {
                <div class="product-item">
                    <img src="https://via.placeholder.com/200" alt="Sản phẩm @i">
                    <h3>Sản phẩm @i</h3>
                    <p class="price">₫@((i * 100000).ToString("N0"))</p>
                    <a href="#" class="btn">Xem chi tiết</a>
                </div>
            }
        </div>
    </div>
</body>
</html>
