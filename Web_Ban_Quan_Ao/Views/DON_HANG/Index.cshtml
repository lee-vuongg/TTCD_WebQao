@model IEnumerable<Web_Ban_Quan_Ao.Models.DON_HANG>

@{
    ViewBag.Title = "Danh Sách Đơn Hàng";
}

<h2 class="mb-4 text-center">Danh Sách Đơn Hàng</h2>

<!-- Nút tạo đơn hàng mới -->
<p>
    @Html.ActionLink("Tạo Mới", "Create", new { @class = "btn btn-primary mb-3" })
</p>

<!-- Bảng hiển thị danh sách đơn hàng -->
<table class="table table-bordered table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Ngay_dat)</th>
            <th>@Html.DisplayNameFor(model => model.Trang_thai)</th>
            <th>@Html.DisplayNameFor(model => model.KHACH_HANG.Ho_ten)</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Ngay_dat)</td>
                <td>@Html.DisplayFor(modelItem => item.Trang_thai)</td>
                <td>@Html.DisplayFor(modelItem => item.KHACH_HANG.Ho_ten)</td>
                <td class="text-center">
                    <!-- Các hành động với nút nhóm -->
                    <div class="btn-group" role="group" aria-label="Actions">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaDH, @class = "btn btn-warning btn-sm" })
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDH, @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH, @class = "btn btn-danger btn-sm", onclick = "return confirm('Bạn có chắc chắn muốn xóa đơn hàng này?')" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
