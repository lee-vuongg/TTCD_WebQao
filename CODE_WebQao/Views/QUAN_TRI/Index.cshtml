@model IEnumerable<CODE_WebQao.Models.QUAN_TRI>

@{
    ViewBag.Title = "Quản Trị";
}

<style>
    h2 {
        font-weight: bold;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    .table {
        width: 100%;
        margin: 20px auto;
        border-collapse: collapse;
        border: 1px solid #ddd;
    }

        .table th, .table td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .table tr:hover {
            background-color: #f1f1f1;
        }

    .action-links {
        display: inline-block;
        padding: 6px 12px;
        margin-right: 10px; /* Khoảng cách giữa các nút */
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        transition: background-color 0.3s;
    }

    .edit-button {
        background-color: #007bff; /* Màu xanh dương */
    }

        .edit-button:hover {
            background-color: #0056b3;
        }

    .details-button {
        background-color: #17a2b8; /* Màu xanh lam nhạt */
    }

        .details-button:hover {
            background-color: #138496;
        }

    .delete-button {
        background-color: #dc3545; /* Màu đỏ */
    }

        .delete-button:hover {
            background-color: #c82333;
        }

    .create-new {
        margin-bottom: 20px;
        display: block;
        text-align: center;
    }

        .create-new a {
            color: white;
            background-color: #28a745; /* Màu xanh lá cây */
            padding: 10px 15px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

            .create-new a:hover {
                background-color: #218838;
            }
</style>

<h2>Danh sách Quản Trị</h2>

<p class="create-new">
    @Html.ActionLink("Thêm mới Quản Trị", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Mat_khau) <!-- Lấy tên thuộc tính đầu tiên từ model -->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Trang_thai) <!-- Lấy tên thuộc tính đầu tiên từ model -->
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Mat_khau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trang_thai)
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Tai_khoan })" class="action-links edit-button">Edit</a>
                <a href="@Url.Action("Details", new { id = item.Tai_khoan })" class="action-links details-button">Details</a>
                <a href="@Url.Action("Delete", new { id = item.Tai_khoan })" class="action-links delete-button"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa quản trị viên này?');">Delete</a>
            </td>
        </tr>
    }
</table>
